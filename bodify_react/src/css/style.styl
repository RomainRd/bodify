// Import all partials
@require './_*.styl'

/* BANNER */
.banner
  height calc(100vh - 100px)
  text-align center
  background-image url('./images/background_fin.png')
  background-size cover !important
  display flex
  align-items center
  justify-content center
  .banner-content
    background url('./images/logonoir.png')
    height 100px
  .banner p
    font-size 20px
    font-weight lighter
    color rgba(255, 255, 255, 0.7)
    margin-bottom 20px

/* NAVBAR */
.tabs
  display flex
  justify-content center
  padding 0 10px
  background-color transparent
  position relative

.tabs a
  color black
  text-decoration none
  &:hover
    cursor pointer
    text-decoration none
    color #D09C67

.tab
  background white
  flex 0 0 25%
  text-align center
  padding 10px 0
  &:first-child
    border-radius 10px 0 0 0
  &:last-child
    border-radius 0 10px 0 0


/* VIDEO -- Main class */
#save_the_date
  display flex
  justify-content center

.white_body
  text-align center
  background-color white
  width 100vw
  height 600px

iframe
  width 100%
  height 30em
  border none
